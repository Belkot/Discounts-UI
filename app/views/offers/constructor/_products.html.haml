%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th #
      %th Code
      %th Name
      %th Price
      %th
  %tbody
  - @products.each_with_index do |product, index|
    %tr
      %th{scope: 'row'}
        = index + 1
      %td
        = product.code
      %td
        = product.name
      %td
        = number_to_currency product.price, precision: 2
      %td
        = link_to 'Remove', product, method: :delete, class: 'btn btn-danger btn-xs', remote: true
