!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Discounts
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container

      <!-- Static navbar -->
      %nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to "Matic offers", root_path, class: 'navbar-brand'
          #navbar.navbar-collapse.collapse
            %ul.nav.navbar-nav.navbar-right
              %li{class: is_active?(offers_constructor_path) + is_active?(root_path)}
                = link_to "Constructor", offers_constructor_path
              %li{class: is_active?(offers_tester_path)}
                = link_to "Tester", offers_tester_path

    .container
      .row
        = yield

      .row
        %hr
        %footer.footer
          %p &copy; Belkot Oleh 2015
        = debug(params) if Rails.env.development?
